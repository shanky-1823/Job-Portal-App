<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <description>Sends an automated technical assessment email to the applicant.</description>
    <label>Send Technical Assessment Email</label>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>SendEmailAction</targetReference>
        </connector>
    </start>
    <actionCalls>
        <name>SendEmailAction</name>
        <label>Send Email</label>
        <actionName>emailSimple</actionName>
        <actionType>emailSimple</actionType>
        <inputParameters>
            <name>emailAddresses</name>
            <value>
                <elementReference>Get_Application.Contact__r.Email</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>subject</name>
            <value>
                <stringValue>Technical Assessment for Your Job Application</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>emailBody</name>
            <value>
                <stringValue>
                    Hello {!Get_Application.Contact__r.FirstName},
                    Your application for the {!Get_Application.Job_Opening__r.Name} position is under review.
                    Please complete the technical assessment at the following link: [link to assessment].
                    Thank you,
                    The Recruiting Team
                </stringValue>
            </value>
        </inputParameters>
    </actionCalls>
    <recordLookups>
        <name>Get_Application</name>
        <label>Get Application</label>
        <object>Application__c</object>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <variables>
        <name>recordId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
</Flow>